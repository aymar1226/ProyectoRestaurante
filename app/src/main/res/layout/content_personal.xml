<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBE9D6"
    tools:context=".Activity.Crud_Personal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:elevation="10dp"
        tools:ignore="MissingConstraints"
        android:background="@drawable/list_item_selector"
        >
        <ImageView
            android:id="@+id/imagen_personal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/fotovacio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/imagen_personal"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp">
            <TextView
                android:id="@+id/nombre_personal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/cargo_personal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rol"
                android:textSize="16sp"/>
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>